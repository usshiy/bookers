<h1>編集画面</h1>

<%= form_with model: @book, url:update_book_path(@book.id), method: :patch do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>本文</h4>
  <%= f.text_area :body %></br>
  
  <%= f.submit 'Update Book' %></br>
  <%= link_to "Show",book_path %>
  <%= link_to "Back",new_book_path %>
  
<% end %>